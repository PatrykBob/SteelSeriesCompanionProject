<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteelSeriesCompanionAndroid2.VolumeSlider">
    <Grid 
        RowDefinitions="Auto, Auto, *, Auto"
        RowSpacing="20">
        <Label 
            x:Name="ChannelLabel"
            Text="Channel"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Grid.Row="0"/>
        <Label
            x:Name="VolumeLabel"
            Text="0%"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="16"
            Grid.Row="1"/>
        <Grid
            x:Name="SliderLayout"
            Grid.Row="2">
            <Slider 
                x:Name="VolumeSliderControl"
                Minimum="0" 
                Maximum="1"
                HeightRequest="50"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Rotation="270"/>
        </Grid>
        <CheckBox
            x:Name="MuteCheckBox"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="3"/>
    </Grid>
</ContentView>
