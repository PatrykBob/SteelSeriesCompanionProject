<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteelSeriesCompanionAndroid2.VolumeSlider">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Label 
            x:Name="ChannelLabel"
            Text="Channel"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Label
            x:Name="VolumeLabel"
            Text="0%"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <AbsoluteLayout
            WidthRequest="50"
            HeightRequest="220"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Slider 
                x:Name="VolumeSliderControl"
                Minimum="0" 
                Maximum="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="200" 
                HeightRequest="50" 
                Rotation="270"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 50, 200"
                />
        </AbsoluteLayout>
        <CheckBox
            x:Name="MuteCheckBox"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentView>
